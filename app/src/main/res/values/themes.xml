<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LikeADesigner" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/green</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.LikeADesignerNight" parent="Theme.LikeADesigner">
        <item name="android:background">@color/brown</item>
    </style>

    <style name="wikipediaSearchTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_margin">@dimen/wikiSearchTextFieldMargin</item>
        <item name="android:hint">@string/wikiSearchTextFieldHint</item>
        <item name="boxStrokeColor">@android:color/holo_blue_dark</item>
        <item name="endIconDrawable">@drawable/ic_wikipedia</item>
        <item name="endIconMode">custom</item>
        <item name="helperText">@string/wikiSearchTextFieldHelperText</item>
        <item name="helperTextEnabled">true</item>
    </style>
</resources>